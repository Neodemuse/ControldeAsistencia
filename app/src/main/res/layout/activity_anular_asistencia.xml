<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anular_Asistencia"
    android:fillViewport="true"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/anularAsistenciaText"
            style="@style/Botones"
            android:text="Anular asistencia"
            android:background="@color/azul"/>
        <EditText
            android:id="@+id/numeroCuentaEdit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Numero de cuenta"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/anularAsistenciaBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anular"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/logo_actuaria"
            android:layout_gravity="center"
            android:foregroundGravity="center_vertical"/>
    </LinearLayout>
</ScrollView>